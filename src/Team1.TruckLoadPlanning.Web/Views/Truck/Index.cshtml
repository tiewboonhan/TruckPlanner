@using Team1.TruckLoadPlanning.Web.Models
@model TruckModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main">
    <div class="container">
        <h2>Truck Summary</h2>
        <br />
        <table class="table table-striped table-bordered" style="padding: 15px;">
            <thead class="tableHead">
                <tr>
                    <th>Truck Type</th>
                    <th>Truck Unit(s)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var summary in Model.TruckSummary)
                {
                    <tr class="tableRow">
                        <td>@summary.Key</td>
                        <td>@summary.Value</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
    <div class="container">
        <h2>Truck Details</h2>
        <br />
        <div class="row"></div>
        <table class="table table-striped table-bordered" style="padding: 15px;">
            <thead class="tableHead">
                <tr>
                    <th>Truck Type</th>
                    <th>Truck No</th>
                    <th>Optimization Percentage</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Trucks)
                {
                    <tr class="tableRow">
                        <td>@item.TruckType</td>
                        <td>@item.TruckNo</td>
                        <td>@item.OptimizationPrecentage %</td>
                        <th><input type="button" id="btnPreview" class="btn btn-primary mt-1" value="Visualize"></th>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>